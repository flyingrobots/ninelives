{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/flyingrobots/ninelives/schemas/command-result.schema.json",
  "title": "Nine Lives CommandResult",
  "type": "object",
  "required": ["result"],
  "properties": {
    "result": {
      "type": "string",
      "enum": ["ack", "value", "list", "reset", "error"]
    },
    "value": { "type": "string" },
    "items": { "type": "array", "items": { "type": "string" } },
    "message": { "type": "string" }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "result": { "const": "value" } } },
      "then": { "required": ["value"] }
    },
    {
      "if": { "properties": { "result": { "const": "list" } } },
      "then": { "required": ["items"] }
    },
    {
      "if": { "properties": { "result": { "const": "error" } } },
      "then": { "required": ["message"] }
    }
  ]
}
