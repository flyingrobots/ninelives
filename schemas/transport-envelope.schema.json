{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/flyingrobots/ninelives/schemas/transport-envelope.schema.json",
  "title": "Nine Lives TransportEnvelope",
  "type": "object",
  "required": ["id", "cmd", "args"],
  "properties": {
    "id": { "type": "string" },
    "cmd": { "type": "string" },
    "args": { "type": "object" },
    "auth": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "oneOf": [
            {
              "required": ["Jwt"],
              "properties": {
                "Jwt": {
                  "type": "object",
                  "required": ["token"],
                  "properties": { "token": { "type": "string" } },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            {
              "required": ["Signatures"],
              "properties": {
                "Signatures": {
                  "type": "object",
                  "required": ["payload_hash", "signatures"],
                  "properties": {
                    "payload_hash": {
                      "type": "array",
                      "items": { "type": "integer", "minimum": 0, "maximum": 255 },
                      "minItems": 32,
                      "maxItems": 32
                    },
                    "signatures": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["algorithm", "signature"],
                        "properties": {
                          "algorithm": { "type": "string" },
                          "signature": { "type": "array", "items": { "type": "integer", "minimum": 0, "maximum": 255 } },
                          "key_id": { "type": ["string", "null"] }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            {
              "required": ["Mtls"],
              "properties": {
                "Mtls": {
                  "type": "object",
                  "required": ["peer_dn", "cert_chain"],
                  "properties": {
                    "peer_dn": { "type": "string" },
                    "cert_chain": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "array",
                        "items": { "type": "integer", "minimum": 0, "maximum": 255 },
                        "minItems": 1
                      }
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            {
              "required": ["Opaque"],
              "properties": {
                "Opaque": {
                  "type": "array",
                  "items": { "type": "integer", "minimum": 0, "maximum": 255 },
                  "minItems": 1
                }
              },
              "additionalProperties": false
            }
          ]
        }
      ]
    }
  },
  "additionalProperties": false
}
