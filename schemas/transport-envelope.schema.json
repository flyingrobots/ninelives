{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/flyingrobots/ninelives/schemas/transport-envelope.schema.json",
  "title": "Nine Lives TransportEnvelope",
  "type": "object",
  "required": ["id", "cmd", "args"],
  "properties": {
    "id": { "type": "string" },
    "cmd": { "type": "string" },
    "args": { "type": "object" },
    "auth": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["jwt", "signatures", "mtls", "opaque"]
            },
            "token": { "type": "string" },
            "payload_hash": { "type": "string" },
            "signatures": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["algorithm", "signature"],
                "properties": {
                  "algorithm": { "type": "string" },
                  "signature": { "type": "string" },
                  "key_id": { "type": "string" }
                },
                "additionalProperties": false
              }
            },
            "peer_dn": { "type": "string" },
            "cert_chain": {
              "type": "array",
              "items": { "type": "string" }
            },
            "data": { "type": "string" }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}
