root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = spaces
indent_size = 4
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[GNUmakefile]
indent_style = tab

[makefile*]
indent_style = tab
